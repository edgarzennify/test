    <design:attribute name="SObjectName" label="Object Name" description="API Name of Standard or Custom Object."/>
    <design:attribute name="FieldsetName" label="Field Set" description='Field Set API Name.' />
    <design:attribute name="FilterCriteria" label="Filter Criteria" description='SQL Filter Formula.' />    
    <design:attribute name="InitialState" label="Initial State" datasource="FULL,HIDDEN" default="HIDDEN" description='Initial state should not be changed, as it will be initially hidden and will render when Object list record is being clicked.' />
